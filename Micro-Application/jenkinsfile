pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')
        IMAGE_TAG = "${BUILD_NUMBER}"
        NAMESPACE = "shopping"
        SONAR_SERVER = "sonarqube"
        APP_DIR = "Micro-Application"
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                git 'https://github.com/your-repo/shopping.git'
            }
        }

        stage('SonarQube Scan') {
            steps {
                withSonarQubeEnv("${SONAR_SERVER}") {
                    sh '''
                        sonar-scanner \
                          -Dsonar.projectKey=shopping-app \
                          -Dsonar.sources=. \
                          -Dsonar.host.url=$SONAR_HOST_URL \
                          -Dsonar.login=$SONAR_AUTH_TOKEN
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Build Images') {
            parallel {

                stage('API Gateway') {
                    steps {
                        dir("${APP_DIR}/api-gateway") {
                            sh 'docker build -t avinashg0/micro:api-${IMAGE_TAG} .'
                        }
                    }
                }

                stage('User Service') {
                    steps {
                        dir("${APP_DIR}/user-service") {
                            sh 'docker build -t avinashg0/micro:user-${IMAGE_TAG} .'
                        }
                    }
                }

                stage('Product Service') {
                    steps {
                        dir("${APP_DIR}/product-service") {
                            sh 'docker build -t avinashg0/micro:product-${IMAGE_TAG} .'
                        }
                    }
                }

                stage('Order Service') {
                    steps {
                        dir("${APP_DIR}/order-service") {
                            sh 'docker build -t avinashg0/micro:order-${IMAGE_TAG} .'
                        }
                    }
                }

                stage('Frontend') {
                    steps {
                        dir("${APP_DIR}/frontend") {
                            sh 'docker build -t avinashg0/micro:fe-${IMAGE_TAG} .'
                        }
                    }
                }
            }
        }

        stage('Trivy Image Scan') {
            steps {
                sh '''
                    trivy image avinashg0/micro:api-${IMAGE_TAG}
                    trivy image avinashg0/micro:user-${IMAGE_TAG}
                    trivy image avinashg0/micro:product-${IMAGE_TAG}
                    trivy image avinashg0/micro:order-${IMAGE_TAG}
                    trivy image avinashg0/micro:fe-${IMAGE_TAG}
                '''
            }
        }

        stage('Push Images') {
            steps {
                sh '''
                    echo $DOCKERHUB_CREDENTIALS_PSW | docker login \
                      -u $DOCKERHUB_CREDENTIALS_USR --password-stdin

                    docker push avinashg0/micro:api-${IMAGE_TAG}
                    docker push avinashg0/micro:user-${IMAGE_TAG}
                    docker push avinashg0/micro:product-${IMAGE_TAG}
                    docker push avinashg0/micro:order-${IMAGE_TAG}
                    docker push avinashg0/micro:fe-${IMAGE_TAG}
                '''
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh '''
                    kubectl set image deployment/api-deploy \
                      api-container=avinashg0/micro:api-${IMAGE_TAG} -n ${NAMESPACE}

                    kubectl set image deployment/user-deploy \
                      user-container=avinashg0/micro:user-${IMAGE_TAG} -n ${NAMESPACE}

                    kubectl set image deployment/product-deploy \
                      product-container=avinashg0/micro:product-${IMAGE_TAG} -n ${NAMESPACE}

                    kubectl set image deployment/order-deploy \
                      order-container=avinashg0/micro:order-${IMAGE_TAG} -n ${NAMESPACE}

                    kubectl set image deployment/fe-deploy \
                      fe-container=avinashg0/micro:fe-${IMAGE_TAG} -n ${NAMESPACE}
                '''
            }
        }
    }

    post {
        success {
            echo "üöÄ Secure Deployment Successful ‚Äî Version ${IMAGE_TAG}"
        }

        failure {
            echo "‚ùå Pipeline Failed"
        }
    }
}